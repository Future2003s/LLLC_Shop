# ===== ENVIRONMENT CONFIGURATION =====

# Production flag - set to true when deploying
NEXT_PUBLIC_IS_PRODUCTION=false

# ===== DEVELOPMENT ENVIRONMENT =====
# Used when NEXT_PUBLIC_IS_PRODUCTION=false

# Frontend URL
NEXT_PUBLIC_URL=http://localhost:3000

# Backend API endpoints
NEXT_PUBLIC_API_END_POINT=http://localhost:8081/api/v1
NEXT_PUBLIC_BACKEND_URL=http://localhost:8081

# Logo URL
NEXT_PUBLIC_URL_LOGO=https://placehold.co/200x80

# API Version
NEXT_PUBLIC_API_VERSION=v1

# ===== PRODUCTION ENVIRONMENT =====
# Used when NEXT_PUBLIC_IS_PRODUCTION=true

# Frontend URL
NEXT_PUBLIC_URL_PRODUCTION=https://lalalycheee.vn

# Backend API endpoints
NEXT_PUBLIC_API_END_POINT_PRODUCTION=https://api.lalalycheee.vn/api/v1
NEXT_PUBLIC_BACKEND_URL_PRODUCTION=https://api.lalalycheee.vn

# Logo URL
NEXT_PUBLIC_URL_LOGO_PRODUCTION=https://placehold.co/200x80

# API Version
NEXT_PUBLIC_API_VERSION_PRODUCTION=v1

# ===== ADDITIONAL CONFIGURATION =====

# Database URLs (if needed)
DATABASE_URL_DEV=mongodb://localhost:27017/shopdev
DATABASE_URL_PROD=mongodb+srv://username:password@cluster.mongodb.net/shopdev

# Redis URLs (if needed)
REDIS_URL_DEV=redis://localhost:6379
REDIS_URL_PROD=redis://redis-14644.c292.ap-southeast-1-1.ec2.redns.redis-cloud.com:14644

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Session timeout (in milliseconds)
SESSION_TIMEOUT=3600000
REFRESH_TOKEN_TIMEOUT=604800000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Email configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@lalalycheee.vn
EMAIL_REPLY_TO=support@lalalycheee.vn

# Payment configuration
PAYMENT_ENABLE_STRIPE=false
PAYMENT_ENABLE_PAYPAL=false
PAYMENT_ENABLE_COD=true
PAYMENT_CURRENCY=VND
PAYMENT_TAX_RATE=0.1

# Analytics
ANALYTICS_ENABLE_GA=false
ANALYTICS_ENABLE_HOTJAR=false
